<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) %cyan(%logger{50}) - %msg%n%rootException</pattern>
        </encoder>
    </appender>

<!--    <logger level="DEBUG" name="com.github.kagkarlsson"/>-->
<!--    <logger level="TRACE" name="com.github.kagkarlsson.scheduler.DueExecutionsBatch"/>-->
<!--    <logger level="TRACE" name="com.github.kagkarlsson.scheduler.Scheduler"/>-->

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
